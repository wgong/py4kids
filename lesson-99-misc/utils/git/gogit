#!/bin/bash
# place this script in ~/.local/bin 

# Enhanced version with error handling and feedback
set -e  # Exit on any error

# Get commit message (default to "refine" if not provided)
commit_message="${1:-refine}"

echo "ğŸ”„ Starting git workflow..."
echo "ğŸ“ Commit message: '$commit_message'"

# Check if we're in a git repository
if ! git rev-parse --git-dir > /dev/null 2>&1; then
    echo "âŒ Error: Not in a git repository"
    exit 1
fi

# Add all changes
echo "ğŸ“¦ Adding all changes..."
git add .

# Check if there are changes to commit
if git diff --cached --quiet; then
    echo "â„¹ï¸  No changes to commit"
    exit 0
fi

# Commit changes
echo "ğŸ’¾ Committing changes..."
git commit -m "$commit_message"

# Push to remote
echo "ğŸš€ Pushing to remote..."
git push

echo "âœ… Git workflow completed successfully!"
echo "ğŸ“‹ Summary:"
echo "   - Added all changes"
echo "   - Committed with message: '$commit_message'"
echo "   - Pushed to remote repository"
